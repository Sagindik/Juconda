@using Juconda.Models.Account;
@model LogInViewModel

@{
	Layout = "~/Views/Shared/_LayoutLogIn.cshtml";
}

<body>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100">
				<form class="login100-form validate-form p-l-55 p-r-55 p-t-178" method="post" asp-controller="Account" asp-action="LogIn">
					<span class="login100-form-title">
						Авторизация
					</span>

					<div class="wrap-input100 validate-input m-b-16" data-validate="Введите логин">
						<input asp-for="UserName" class="input100" type="text" placeholder="Логин">
						<span asp-validation-for="UserName" class="focus-input100"></span>
					</div>

					<div class="wrap-input100 validate-input" data-validate="Введите пароль">
						<input asp-for="Password" class="input100" type="password" placeholder="Пароль">
						<span asp-validation-for="Password" class="focus-input100"></span>
					</div>

					<div class="text-right p-t-13 p-b-23">
						<span class="txt1">
							Я забыл
						</span>

						<a href="#" class="txt2">
							Логин / Пароль?
						</a>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn" type="submit">
							Войти
						</button>
					</div>

					<div class="flex-col-c p-t-170 p-b-40">
						<span class="txt1 p-b-9">
							Еще нет аккаунта?
						</span>

						<a asp-action="Register" class="txt3">
							Зарегистрироваться сейчас
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>