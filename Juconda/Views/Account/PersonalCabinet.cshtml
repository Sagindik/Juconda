@using Juconda.ViewModels.Account;
@model PersonalCabinetViewModel

@{
    // This is setting the property to Hahaha
    ViewBag.Title = "Hahaha";
}
<style>

    .wrap-input100 {
        width: 100%;
        background-color: #fff;
        border-radius: 27px;
        position: relative;
        z-index: 1;
    }

    .validate-input {
        position: relative;
    }

    .input100 {
        font-family: Ubuntu-Bold;
        font-size: 15px;
        color: #1b3815;
        line-height: 1.2;
        position: relative;
        display: block;
        width: 100%;
        height: 55px;
        background: #ebebeb;
        border-radius: 27px;
        padding: 0 35px 0 35px;
    }

    .focus-input100 {
        display: block;
        position: absolute;
        z-index: -1;
        width: 100%;
        height: 100%;
        top: 0;
        left: 50%;
        -webkit-transform: translateX(-50%);
        -moz-transform: translateX(-50%);
        -ms-transform: translateX(-50%);
        -o-transform: translateX(-50%);
        transform: translateX(-50%);
        border-radius: 31px;
        /*background-color: #ebebeb;*/
        pointer-events: none;
        -webkit-transition: all 0.4s;
        -o-transition: all 0.4s;
        -moz-transition: all 0.4s;
        transition: all 0.4s;
    }

    [type=text]:focus, [type=password]:focus, [type=date]:focus, [type=datetime]:focus, [type=datetime-local]:focus, [type=month]:focus, [type=week]:focus, [type=email]:focus, [type=number]:focus, [type=search]:focus, [type=tel]:focus, [type=time]:focus, [type=url]:focus, [type=color]:focus, textarea:focus {
        background-color: #ebebeb;
       
    }

   /* .input100:focus + .focus-input100 {
        width: calc(100% + 20px);
    }*/

    .container-custom-form {
    }

    .custom-flex{
        display: flex;
    }
</style>

<div class="container container-custom-form">
    <div class="row">
        <div class="col-12">
            <nav>
                <ul class="breadcrumbs" itemscope itemtype="http://schema.org/BreadcrumbList">
                    <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><a href="/" title="Джоконда" itemprop="item" itemscope itemtype="http://schema.org/Thing"><span itemprop="name">Джоконда</span></a><meta itemprop="position" content="1"></li>
                    <li itemprop="itemListElement" itemscope itemtype="http://schema.org/ListItem"><span itemprop="item" itemscope itemtype="http://schema.org/Thing"><span itemprop="name">Личный кабинет</span></span><meta itemprop="position" content="2"></li>
                </ul>
            </nav>
            <article class="inner-container d-flex">
                <h1>Личный кабинет</h1>
                <div class="custom-flex">
                    <nav class="inner-menu show-for-xlarge">
                        <ul class="menu vertical">
                            <li class="active"><a href="">Личные данные</a></li>
                            <li><a href="">Мои заказы</a></li>
                        </ul>
                    </nav>

                    <div action="#" class="d-flex flex-column">
                        <div class="wrap-input100 validate-input m-b-16" data-validate="Фамилия">
                            <input asp-for="UserName" class="input100" type="text" placeholder="Фамилия" autocomplete="off">
                            <span asp-validation-for="UserName" class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Имя">
                            <input asp-for="UserName" class="input100" type="text" placeholder="Имя" autocomplete="off">
                            <span asp-validation-for="UserName" class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Отчество">
                            <input asp-for="UserName" class="input100" type="text" placeholder="Отчество" autocomplete="off">
                            <span asp-validation-for="UserName" class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Введите почту">
                            <input asp-for="UserName" class="input100" type="email" placeholder="Почта" autocomplete="off">
                            <span asp-validation-for="UserName" class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Введите телефон">
                            <input asp-for="UserName" class="input100" type="text" placeholder="Телефон" autocomplete="off">
                            <span asp-validation-for="UserName" class="focus-input100"></span>
                        </div>


                        @*         <div class="">
                        <label></label>
                        <input disabled>
                        </div>

                        <div class="">
                        <label>Имя:</label>
                        <input disabled>
                        </div>*@

                    </div>
                </div>
               
            </article>
        </div>
    </div>
</div>
